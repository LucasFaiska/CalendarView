<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/exFourRoundBgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="14dp"
        android:background="@drawable/example_4_single_selected_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <View
            android:id="@+id/selected_middle_background_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_weight="0.5"
            android:background="#25FFE14B"
            android:visibility="visible" />

        <View
            android:id="@+id/selected_middle_background_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_weight="0.5"
            android:background="#25FFE14B"
            android:visibility="visible" />

    </LinearLayout>

    <View
        android:id="@+id/selected_start_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="14dp"
        android:background="@drawable/example_4_single_selected_bg"
        android:visibility="gone" />

    <View
        android:id="@+id/selected_end_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="14dp"
        android:background="@drawable/example_4_single_selected_bg"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <View
            android:id="@+id/midle_corner_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="14dp"
            android:layout_weight="0.5"
            android:background="@drawable/example_4_midle_corners_start"
            android:visibility="visible" />

        <View
            android:id="@+id/midle_corner_end"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="14dp"
            android:layout_weight="0.5"
            android:background="@drawable/example_4_midle_corners_end"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/exFourDayText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:textSize="12sp"
        tools:text="22" />

</FrameLayout>

